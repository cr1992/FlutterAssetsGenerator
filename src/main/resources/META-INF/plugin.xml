<idea-plugin>
    <id>com.crzsc.FlutterAssetsGenerator</id>
    <name>FlutterAssetsGenerator</name>
    <icon src="/META-INF/pluginIcon.svg"/>
    <vendor email="cr1992@qq.com" url="https://github.com/cr1992/FlutterAssetsGenerator">Ray&amp;Zsc</vendor>

    <description><![CDATA[
A powerful Android Studio / IntelliJ plugin that automatically generates type-safe, hierarchical asset index for your Flutter projects. Supports SVG, Lottie, and automatic dependency management with smart widget integration.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.json</depends>
    <depends>com.intellij.modules.lang</depends>
    <!--    <depends>com.intellij.modules.java</depends>-->
    <depends>com.intellij.modules.all</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>Dart</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>io.flutter</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <!-- Notification Group -->
        <notificationGroup id="FlutterAssetsGenerator" displayType="BALLOON"/>

        <!--        行标记-->
        <codeInsight.lineMarkerProvider language="Dart"
                                        implementationClass="com.crzsc.plugin.provider.AssetsLineMarkerProvider"/>
    </extensions>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true"/>
    </extensions>

    <applicationListeners>
        <listener class="com.crzsc.plugin.listener.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>
        <!-- Flutter Assets Generator 工具组 -->
        <group id="FlutterAssetsGenerator.ToolsMenu" text="Flutter Assets Generator" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            
            <!-- 生成资源文件 -->
            <action id="action.generate" class="com.crzsc.plugin.actions.GenerateAction" 
                    text="Generate Assets" 
                    description="Generate Flutter assets code for all modules">
                <keyboard-shortcut keymap="$default" first-keystroke="alt g"/>
            </action>
            
            <!-- 一键配置项目 -->
            <action id="action.setup" class="com.crzsc.plugin.actions.SetupProjectAction"
                    text="Setup Project Configuration"
                    description="Add default flutter_assets_generator configuration to pubspec.yaml">
            </action>
        </group>
        
        <!-- 右键菜单:配置路径到 pubspec.yaml -->
        <action id="com.crzsc.plugin.actions.GenerateDirAction" class="com.crzsc.plugin.actions.GenerateDirAction"
                text="Flutter: Configuring Paths" description="Configuring Paths in pubspec.yaml"
                icon="AllIcons.Actions.BuildLoadChanges">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="WeighingNewGroup"/>
        </action>
    </actions>
</idea-plugin>